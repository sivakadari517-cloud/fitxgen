    "clsx": "^2.1.1",
    "framer-motion": "^12.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.468.0",
    "mongoose": "^8.8.3",
    "next": "15.4.6",
    "next-auth": "^5.0.0-beta.22",
    "razorpay": "^2.9.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.54.0",
    "resend": "^4.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.5.4",
    "zod": "^3.24.1"
